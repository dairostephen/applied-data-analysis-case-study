import pandas as pd
import matplotlib.pyplot as plt

# Load data
df = pd.read_csv("../data/school_payments_attendance_case_study.csv")

# Initial inspection
df.head()
df.info()
df.describe()

# Data quality checks
df.isnull().sum()

# Add calculated fields
df['outstanding_balance'] = df['expected_fee'] - df['amount_paid']

# Payment status distribution
payment_distribution = df['payment_status'].value_counts()

# Attendance by payment status
attendance_by_payment = df.groupby('payment_status')['attendance_rate'].mean()

# Financial risk by class
fees_by_class = df.groupby('class')[['amount_paid', 'expected_fee']].sum()
fees_by_class['outstanding_balance'] = (
    fees_by_class['expected_fee'] - fees_by_class['amount_paid']
)

# Visualization: Attendance vs Payment Status
attendance_by_payment.plot(kind='bar')
plt.xlabel("Payment Status")
plt.ylabel("Average Attendance Rate")
plt.title("Average Attendance by Payment Status")
plt.show()

# Visualization: Outstanding balance by class
fees_by_class['outstanding_balance'].plot(kind='bar')
plt.xlabel("Class")
plt.ylabel("Outstanding Balance")
plt.title("Outstanding Fee Balance by Class")
plt.show()

attendance_by_payment, fees_by_class
