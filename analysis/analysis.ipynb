      "source": [
        "# Cleaned analysis notebook\n",
        "\n",
        "This notebook loads the dataset, coerces/validates column dtypes, reports issues (missing / invalid ranges), computes `outstanding_balance`, saves a cleaned CSV, and produces basic visualizations."
      ]
    },
    {
      "cell_type": "code",
      "execution_count": null,
      "metadata": {},
      "outputs": [],
      "source": [
        "import pandas as pd\n",
        "import numpy as np\n",
        "import matplotlib.pyplot as plt\n",
        "\n",
        "# Path to source CSV (relative to analysis/ directory)\n",
        "SRC_CSV = \"../data/school_payments_attendance_case_study.csv\"\n",
        "CLEANED_CSV = \"../data/school_payments_attendance_case_study.cleaned.csv\"\n",
        "\n",
        "# Load raw data\n",
        "df = pd.read_csv(SRC_CSV)\n",
        "\n",
        "# Work on a copy\n",
        "df_clean = df.copy()\n",
        "\n",
        "# Expected numeric columns\n",
        "numeric_cols = [\"amount_paid\", \"expected_fee\", \"attendance_rate\"]\n",
        "\n",
        "# Coerce numeric columns to numbers (invalid values -> NaN)\n",
        "for c in numeric_cols:\n",
        "    if c in df_clean.columns:\n",
        "        df_clean[c] = pd.to_numeric(df_clean[c], errors=\"coerce\")\n",
        "    else:\n",
        "        print(f\"Warning: expected column '{c}' not found in data\")\n",
        "\n",
        "# Convert payment_status to categorical if present\n",
        "if \"payment_status\" in df_clean.columns:\n",
        "    df_clean[\"payment_status\"] = df_clean[\"payment_status\"].astype(\"category\")\n",
        "else:\n",
        "    print(\"Warning: 'payment_status' column not found\")\n",
        "\n",
        "# Report missing values in key columns\n",
        "missing_summary = df_clean[numeric_cols].isnull().sum().to_dict()\n",
        "\n",
        "# Check attendance_rate range (0-100)\n",
        "invalid_attendance_mask = pd.Series(False, index=df_clean.index)\n",
        "if \"attendance_rate\" in df_clean.columns:\n",
        "    invalid_attendance_mask = ~df_clean[\"attendance_rate\"].between(0, 100)\n",
        "invalid_attendance_count = int(invalid_attendance_mask.sum())\n",
        "\n",
        "# Compute outstanding balance if fee columns available\n",
        "if set([\"expected_fee\", \"amount_paid\"]).issubset(df_clean.columns):\n",
        "    df_clean[\"outstanding_balance\"] = df_clean[\"expected_fee\"] - df_clean[\"amount_paid\"]\n",
        "else:\n",
        "    print(\"Warning: fee columns missing; cannot compute outstanding_balance\")\n",
        "\n",
        "# Aggregate summaries for quick inspection\n",
        "payment_distribution = None\n",
        "attendance_by_payment = None\n",
        "fees_by_class = None\n",
        "\n",
        "if \"payment_status\" in df_clean.columns:\n",
        "    payment_distribution = df_clean[\"payment_status\"].value_counts()\n",
        "    if \"attendance_rate\" in df_clean.columns:\n",
        "        attendance_by_payment = df_clean.groupby(\"payment_status\")[\"attendance_rate\"].mean()\n",
        "\n",
        "if \"class\" in df_clean.columns and set([\"amount_paid\", \"expected_fee\"]).issubset(df_clean.columns):\n",
        "    fees_by_class = df_clean.groupby(\"class\")[['amount_paid', 'expected_fee']].sum()\n",
        "    fees_by_class['outstanding_balance'] = (\n",
        "        fees_by_class['expected_fee'] - fees_by_class['amount_paid']\n",
        "    )\n",
        "\n",
        "# Save cleaned CSV so downstream steps use consistent, validated data\n",
        "df_clean.to_csv(CLEANED_CSV, index=False)\n",
        "\n",
        "# Simple visualizations (keep them lightweight)\n",
        "if attendance_by_payment is not None:\n",
        "    ax = attendance_by_payment.plot(kind='bar', rot=0)\n",
        "    ax.set_xlabel(\"Payment Status\")\n",
        "    ax.set_ylabel(\"Average Attendance Rate\")\n",
        "    ax.set_title(\"Average Attendance by Payment Status\")\n",
        "    plt.tight_layout()\n",
        "    plt.show()\n",
        "\n",
        "if fees_by_class is not None:\n",
        "    ax2 = fees_by_class['outstanding_balance'].plot(kind='bar', rot=45)\n",
        "    ax2.set_xlabel(\"Class\")\n",
        "    ax2.set_ylabel(\"Outstanding Balance\")\n",
        "    ax2.set_title(\"Outstanding Fee Balance by Class\")\n",
        "    plt.tight_layout()\n",
        "    plt.show()\n",
        "\n",
        "# Summary dictionary returned for inspection when running the cell\n",
        "summary = {\n",
        "    \"missing_numeric_counts\": missing_summary,\n",
        "    \"invalid_attendance_count\": invalid_attendance_count,\n",
        "    \"cleaned_csv_path\": CLEANED_CSV,\n",
        "}\n",
        "\n",
        "summary\n"
      ]
    }
  ],
